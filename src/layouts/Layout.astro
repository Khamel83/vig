---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Prediction pools for friends" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | The Vig</title>
  </head>
  <body>
    <nav class="bg-slate-800 border-b border-slate-700">
      <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-vig-500">The Vig</a>
        <div class="flex items-center gap-4" id="nav-auth">
          <a href="/login" class="btn btn-secondary">Login</a>
        </div>
      </div>
    </nav>
    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t border-slate-700 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-6 text-center text-slate-500">
        <p>The Vig - Prediction pools for friends</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
