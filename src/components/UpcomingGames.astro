---
import type { Game } from '../lib/db';
---

<div class="bg-slate-800 rounded-lg p-4 border border-slate-700">
  <h3 class="font-semibold text-white mb-4">Games Involving Your Teams</h3>

  {upcomingGames.length > 0 ? (
    <div class="space-y-3">
      {upcomingGames.map(game => (
        <div class="bg-slate-700/50 rounded-lg p-3 hover:bg-slate-700 transition-colors">
          <div class="flex justify-between items-center">
            <div class="flex-1">
              <div class="flex items-center justify-between mb-1">
                <div class="flex items-center space-x-2">
                  <span class="text-sm font-medium text-white">{game.home_team}</span>
                  <span class="text-slate-400">vs</span>
                  <span class="text-sm font-medium text-white">{game.away_team}</span>
                </div>
                <span class="text-xs text-slate-400">
                  {new Date(game.scheduled_at).toLocaleDateString()}
                </span>
              </div>
              <div class="text-xs text-slate-400">
                {game.scheduled_at && new Date(game.scheduled_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
              </div>
            </div>
            {game.status === 'scheduled' && (
              <button class="bg-vig-600 hover:bg-vig-700 text-white text-xs px-3 py-1 rounded transition-colors">
                Pick Team
              </button>
            )}
            {game.status === 'in_progress' && (
              <span class="bg-green-900/20 text-green-400 text-xs px-3 py-1 rounded">
                Live
              </span>
            )}
            {game.status === 'final' && (
              <span class="bg-blue-900/20 text-blue-400 text-xs px-3 py-1 rounded">
                Final
              </span>
            )}
          </div>

          {game.home_score !== null && game.away_score !== null && (
            <div class="mt-2 text-xs text-slate-400">
              Final: {game.home_score} - {game.away_score}
            </div>
          )}
        </div>
      ))}
    </div>
  ) : (
    <div class="text-center py-8 text-slate-500">
      No upcoming games involving your selected teams
    </div>
  )}

  <div class="mt-4 pt-4 border-t border-slate-700">
    <a href="/upcoming-games" class="text-vig-400 hover:text-vig-300 text-sm font-medium">
      View All Upcoming Games â†’
    </a>
  </div>
</div>